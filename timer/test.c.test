#include <stdio.h>
#include <timer.h>
#include <unistd.h>

void *test(void *args)
{
	printf("hello test\n");
}

void *test1(void *args)
{
	printf("hello test1\n");
}

int main(int argc, const char *argv[])
{
	int rc;
	void *timer;
	void *timer1;
	struct clk_event event;

	Tclk_init();

	event.handle = test;
	event.args = NULL;
	event.start.tv_sec = 3;
	event.start.tv_nsec = 0;
	event.interval.tv_sec = 0;
	event.interval.tv_nsec = 0;

	rc = Tclk_new(&timer, &event);
	event.handle = test1;
	event.args = NULL;
	event.start.tv_sec = 0;
	event.start.tv_nsec = 0;
	event.interval.tv_sec = 2;
	event.interval.tv_nsec = 0;
	rc = Tclk_new(&timer1, &event);

	sleep(5);
	Tclk_del(&timer);

	sleep(5);
	Tclk_del(&timer1);

	Tclk_exit();

	return 0;
}
